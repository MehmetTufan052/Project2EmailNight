<!DOCTYPE html>
<html lang="en">

<body>
    <!-- wrapper -->

    <div class="wrapper">

        <!--end sidebar-wrapper-->
        <!--header-->
        <!--end header-->
        <!--page-wrapper-->
        <div class="page-wrapper">
            <!--page-content-wrapper-->
            <div class="page-content-wrapper">
                <div class="page-content">
                    <!--breadcrumb-->
                    <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
                        <div class="breadcrumb-title pe-3">Kullanıcı Profili</div>
                    </div>
                    <!--end breadcrumb-->
                    <div class="user-profile-page">
                        <div class="card radius-15">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 col-lg-7 mt-3 mt-lg-0">
                                        <div class="bg-light rounded-4 p-4 h-100">

                                            <div class="d-flex align-items-center">

                                                <!-- Profil Foto -->
                                                <div class="me-4">
                                                    <img src="@Url.Content(Model.ImageUrl)"
                                                         class="rounded-circle"
                                                         width="110"
                                                         height="110"
                                                         style="object-fit:cover;"
                                                         alt="Profil Fotoğrafı" />
                                                </div>

                                                <!-- Bilgiler -->
                                                <div class="flex-grow-1">

                                                    <h4 class="fw-bold mb-1">
                                                        @Model.Name @Model.Surname
                                                    </h4>

                                                    <div class="text-muted mb-2 small">
                                                        İngilizce Öğretmeni
                                                    </div>

                                                    <div class="d-flex align-items-center text-muted small">
                                                        <i class="bx bx-buildings me-2"></i>
                                                        ELT Sertifikalı İngilizce Öğretmeni
                                                    </div>

                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-5 mt-3 mt-lg-0">
                                        <div class="bg-light rounded-4 p-4">
                                            <div class="mb-3">
                                                <span class="text-muted small">Yaş</span>
                                                <div class="fw-bold fs-5">26</div>
                                            </div>

                                            <div>
                                                <span class="text-muted small">Lokasyon</span>
                                                <div class="fw-bold fs-6">Fatsa, Ordu, Türkiye</div>
                                            </div>
                                        </div>
                                    </div>



                                </div>
                                <!--end row-->
                                <br />
                                <ul class="nav nav-pills">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-bs-toggle="tab" href="#Dashboard"><span class="p-tab-name">İstatistikler</span><i class='bx bx-donate-blood font-24 d-sm-none'></i></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="profile-tab" data-bs-toggle="tab" href="#Biography"><span class="p-tab-name">Hakkımda</span><i class='bx bxs-user-rectangle font-24 d-sm-none'></i></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-bs-toggle="tab" href="#Edit-Profile"><span class="p-tab-name">Profili Güncelle</span><i class='bx bx-message-edit font-24 d-sm-none'></i></a>
                                    </li>
                                </ul>
                                <div class="tab-content mt-3">
                                    <div class="tab-pane fade show active" id="Dashboard">
                                        <div class="page-content">
                                            <div class="row">
                                                <div class="col-12 col-lg-3">
                                                    <div class="card radius-15 bg-primary text-white">
                                                        <div class="card-body">
                                                            <div class="d-flex align-items-center">
                                                                <div>
                                                                    <h2 class="mb-0 text-white">@Model.TotalMessageCount</h2>
                                                                    <p class="mb-0">Toplam Mesaj</p>
                                                                </div>
                                                                <div class="ms-auto font-35 text-white"><i class="bx bx-envelope"></i></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-lg-3">
                                                    <div class="card radius-15 bg-success text-white">
                                                        <div class="card-body">
                                                            <div class="d-flex align-items-center">
                                                                <div>
                                                                    <h2 class="mb-0 text-white">@Model.ReadMessageCount</h2>
                                                                    <p class="mb-0">Okunan Mesajlar</p>
                                                                </div>
                                                                <div class="ms-auto font-35 text-white"><i class="bx bx-envelope-open"></i></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-lg-3">
                                                    <div class="card radius-15 bg-warning text-dark">
                                                        <div class="card-body">
                                                            <div class="d-flex align-items-center">
                                                                <div>
                                                                    <h2 class="mb-0 text-dark">@Model.DraftCount</h2>
                                                                    <p class="mb-0">Taslaklar</p>
                                                                </div>
                                                                <div class="ms-auto font-35 text-dark"><i class="bx bx-file"></i></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-lg-3">
                                                    <div class="card radius-15 bg-danger text-white">
                                                        <div class="card-body">
                                                            <div class="d-flex align-items-center">
                                                                <div>
                                                                    <h2 class="mb-0 text-white">@Model.StarredCount</h2>
                                                                    <p class="mb-0">Yıldızlı Mesajlar</p>
                                                                </div>
                                                                <div class="ms-auto font-35 text-white"><i class="bx bx-star"></i></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12 col-lg-8">
                                                    <div class="card radius-15">
                                                        <div class="card-header border-bottom-0">
                                                            <div class="d-flex align-items-center">
                                                                <div>
                                                                    <h5 class="mb-0">Son Gelen Mesajlar</h5>
                                                                </div>
                                                                <div class="ms-auto">
                                                                    <a href="#" class="btn btn-white btn-sm radius-15">Tümünü Gör</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-body p-0">
                                                            <div class="table-responsive">
                                                                <table class="table mb-0">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Gönderen</th>
                                                                            <th>Konu</th>
                                                                            <th>Tarih</th>
                                                                            <th>Durum</th>
                                                                            <th>İşlem</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var item in Model.LastMessages)
                                                                        {
                                                                            <tr>
                                                                                <td>@item.SenderEmail</td>
                                                                                <td>@item.Subject</td>
                                                                                <td>@item.SendDate.ToString("dd.MM.yyyy")</td>
                                                                                <td>
                                                                                    @if (item.IsStatus)
                                                                                    {
                                                                                        <span class="badge bg-light-success text-success w-100">Okundu</span>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <span class="badge bg-light-warning text-warning w-100">Bekliyor</span>
                                                                                    }
                                                                                </td>
                                                                                <td>
                                                                                    <a asp-controller="Email"
                                                                                       asp-action="MessageDetails"
                                                                                       asp-route-id="@item.MessageId"
                                                                                       class="btn btn-sm btn-outline-primary">
                                                                                        <i class="bx bx-search"></i>
                                                                                    </a>
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-12 col-lg-4">
                                                    <div class="card radius-15">
                                                        <div class="card-body">
                                                            <h5 class="mb-3">Mesaj Kotası</h5>
                                                            <div class="progress-wrapper">
                                                                <p class="mb-1">Gelen Kutusu Kapasitesi <span class="float-end">75%</span></p>
                                                                <div class="progress radius-15" style="height:8px;">
                                                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 75%"></div>
                                                                </div>
                                                            </div>
                                                            <hr>
                                                            <div class="list-group list-group-flush">
                                                                <a href="javascript:;" class="list-group-item d-flex justify-content-between align-items-center bg-transparent">
                                                                    Bugün Gelen <span class="badge bg-info rounded-pill">@Model.TodayMessageCount</span>
                                                                </a>
                                                                <a href="javascript:;" class="list-group-item d-flex justify-content-between align-items-center bg-transparent">
                                                                    Silinmişler <span class="badge bg-secondary rounded-pill">@Model.DeletedMessageCount</span>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="Biography">
                                        <div class="row">
                                            <div class="col-lg-8">
                                                <div class="card shadow-none border mb-0 radius-15">
                                                    <div class="card-body">
                                                        <h5 class="mb-3">Hakkımda</h5>
                                                        <p>
                                                            Ben Yusuf Çetin. 26 yaşındayım ve Ordu’nun Fatsa ilçesinde yaşıyorum. ELT (English Language Teaching) sertifikalı bir İngilizce öğretmeni olarak mesleğimi büyük bir tutkuyla yapıyorum. İngilizce öğretmenliğini sadece bir ders anlatımı olarak değil, öğrencilerimin kendilerini ifade edebilmelerini sağlayan bir iletişim aracı olarak görüyorum.

                                                            Eğitim hayatım boyunca dil öğretiminde çağdaş ve öğrenci merkezli yaklaşımları benimsemeye özen gösterdim. Derslerimde yalnızca gramer kurallarına odaklanmak yerine, konuşma pratiği, dinleme becerisi ve özgüven gelişimini ön planda tutuyorum. Amacım, öğrencilerimin İngilizceyi ezberlenen bir ders olarak değil, günlük hayatta aktif şekilde kullanabilecekleri bir beceri olarak görmelerini sağlamak.

                                                            Genç ve enerjik bir öğretmen olarak öğrencilerimle güçlü bir iletişim kurmaya, onları motive etmeye ve her birinin potansiyelini ortaya çıkarmaya önem veriyorum. Mesleğimi bir görevden öte bir sorumluluk ve tutku olarak görüyor, kendimi sürekli geliştirmeye devam ediyorum.
                                                        </p>
                                                        <hr>
                                                        <h5 class="mb-3">Yetenekler</h5>
                                                        <div class="chip">
                                                            İngilizce Öğretimi <span class="closebtn" onclick="this.parentElement.style.display='none'">×</span>
                                                        </div>
                                                        <div class="chip">
                                                            Sınıf Yönetimi <span class="closebtn" onclick="this.parentElement.style.display='none'">×</span>
                                                        </div>
                                                        <div class="chip">
                                                            Konuşma Becerisi Geliştirme <span class="closebtn" onclick="this.parentElement.style.display='none'">×</span>
                                                        </div>
                                                        <div class="chip">
                                                            Ders Planlama <span class="closebtn" onclick="this.parentElement.style.display='none'">×</span>
                                                        </div>
                                                        <div class="chip">
                                                            Öğrenci Odaklı Eğitim <span class="closebtn" onclick="this.parentElement.style.display='none'">×</span>
                                                        </div>
                                                        <div class="chip">
                                                            Ölçme ve Değerlendirme <span class="closebtn" onclick="this.parentElement.style.display='none'">×</span>
                                                        </div>
                                                        <div class="chip">
                                                            Eğitim Teknolojileri Kullanımı <span class="closebtn" onclick="this.parentElement.style.display='none'">×</span>
                                                        </div>
                                                        <div class="chip">
                                                            İletişim Becerileri <span class="closebtn" onclick="this.parentElement.style.display='none'">×</span>
                                                        </div>
                                                        <div class="chip">
                                                            Motivasyon ve Rehberlik <span class="closebtn" onclick="this.parentElement.style.display='none'">×</span>
                                                        </div>
                                                        <div class="chip">
                                                            Müfredat Geliştirme <span class="closebtn" onclick="this.parentElement.style.display='none'">×</span>
                                                        </div>
                                                        <h5 class="mb-3">Diller</h5>
                                                        <hr>
                                                        <ul class="list-inline mb-0">
                                                            <li class="list-inline-item">
                                                                <i class="flag-icon flag-icon-tr me-2"></i><span>Türkçe</span>
                                                            </li>
                                                            <li class="list-inline-item">
                                                                <i class="flag-icon flag-icon-um me-2"></i><span>İngilizce</span>
                                                            </li>
                                                           
                                                            <li class="list-inline-item">
                                                                <i class="flag-icon flag-icon-fr me-2"></i><span>Fransızca</span>
                                                            </li>
                                                            <li class="list-inline-item">
                                                                <i class="flag-icon flag-icon-de me-2"></i><span>Almanca</span>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="Edit-Profile">
                                        <div class="card shadow-none border mb-0 radius-15">
                                            <div class="card-body">
                                                <div class="form-body">
                                                    <div class="row">
                                                        <div class="container">

                                                            <form method="post" enctype="multipart/form-data">
                                                                <div class="col-12">
                                                                    <label class="form-label">Adınız</label>
                                                                    <input type="text" asp-for="Name" class="form-control" placeholder="Adınız" />
                                                                </div>
                                                                <br />
                                                                <div class="col-12">
                                                                    <label class="form-label">Soyadınız</label>
                                                                    <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınız" />
                                                                </div>
                                                                <br />
                                                                <div class="col-12">
                                                                    <label class="form-label">Email Adresiniz</label>
                                                                    <input type="text" asp-for="Email" class="form-control" placeholder="Email Adresi" />
                                                                </div>
                                                                <br />
                                                                <div class="col-12">
                                                                    <label class="form-label">Görsel Seç</label>
                                                                    <input type="file" asp-for="Image" class="form-control" placeholder="Görsel Seç" />
                                                                </div>
                                                                <br />
                                                                <div class="col-12">
                                                                    <label class="form-label">Şifreniz</label>
                                                                    <input type="text" asp-for="Password" class="form-control" placeholder="Şifreniz" />
                                                                </div>
                                                                <br />
                                                                <button class="btn btn-info">Bilgileri Kaydet</button>
                                                            </form>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end page-content-wrapper-->
        </div>
        <!--end page-wrapper-->
        <!--start overlay-->
        <div class="overlay toggle-btn-mobile"></div>
        <!--end overlay-->

    </div>
</body>

</html>
