@model Project2EmailNight.Entities.AppUser
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<title>Syndash - Bootstrap4 Admin Template</title>
	<!--favicon-->
	<link rel="icon" href="~/vertical-20260127T171413Z-3-001/vertical/assets/images/favicon-32x32.png" type="image/png" />
	<!-- loader-->
	<link href="~/vertical-20260127T171413Z-3-001/vertical/assets/css/pace.min.css" rel="stylesheet" />
	<script src="~/vertical-20260127T171413Z-3-001/vertical/assets/js/pace.min.js"></script>
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="~/vertical-20260127T171413Z-3-001/vertical/assets/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&family=Roboto&display=swap" />
	<!-- Icons CSS -->
	<link rel="stylesheet" href="~/vertical-20260127T171413Z-3-001/vertical/assets/css/icons.css" />
	<!-- App CSS -->
	<link rel="stylesheet" href="~/vertical-20260127T171413Z-3-001/vertical/assets/css/app.css" />
</head>

<body>
	<!-- wrapper -->
	<div class="wrapper">
		<div class="authentication-reset-password d-flex align-items-center justify-content-center">
			<div class="row">
				<div class="col-12 col-lg-10 mx-auto">
					<div class="card radius-15">
						<div class="row g-0">
							<div class="col-lg-5">
								<div class="card-body p-md-5">
									<div class="text-left">
										<img src="~/vertical-20260127T171413Z-3-001/vertical/assets/images/logo-img.png" width="180" alt="">
									</div>
									<h4 class="mt-5 font-weight-bold">E-Mail Doğrulama Sayfası</h4>
									<p class="text-muted">Mail Adresinize Gelen Mail Doğrulama Kodunu Giriniz.</p>
									<div class="mb-3 mt-5">
										<label class="form-label">E-Mail Adresiniz</label>
										<input type="text" class="form-control" placeholder="E-Mail Adresiniz" />
									</div>
									<div class="mb-3">
										<label class="form-label">Doğrulama Kodu</label>
										<input type="text" class="form-control" placeholder="Doğrulama Kodu" />
									</div>
									<div class="d-grid gap-2">
										<button type="button" class="btn btn-primary">Email Doğrula</button>
										<a href="authentication-login.html" class="btn btn-light"><i class='bx bx-arrow-back mr-1'></i>Giriş Sayfasına Dön</a>
									</div>
								</div>
							</div>
							<div class="col-lg-7">
								<img src="~/vertical-20260127T171413Z-3-001/vertical/assets/images/login-images/forgot-password-frent-img.jpg" class="card-img login-img h-100" alt="...">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end wrapper -->
</body>

</html>