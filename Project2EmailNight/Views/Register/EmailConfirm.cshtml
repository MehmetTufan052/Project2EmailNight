@model Project2EmailNight.Entities.AppUser
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Syndash - Email Doğrulama</title>

    <link rel="icon" href="~/vertical-20260127T171413Z-3-001/vertical/assets/images/favicon-32x32.png" />
    <link rel="stylesheet" href="~/vertical-20260127T171413Z-3-001/vertical/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/vertical-20260127T171413Z-3-001/vertical/assets/css/icons.css" />
    <link rel="stylesheet" href="~/vertical-20260127T171413Z-3-001/vertical/assets/css/app.css" />
</head>

<body class="bg-light">

    <div class="wrapper">
        <div class="authentication-reset-password d-flex align-items-center justify-content-center">
            <div class="row w-100 justify-content-center">
                <div class="col-12 col-lg-10">
                    <div class="card radius-15 overflow-hidden">
                        <div class="row g-0">

                            <!-- SOL TARAF -->
                            <div class="col-lg-5">
                                <div class="card-body p-5">
                                    <img src="~/vertical-20260127T171413Z-3-001/vertical/assets/images/logo-img.png"
                                         width="160" class="mb-4" />

                                    <h4 class="font-weight-bold mb-2">E-Mail Doğrulama</h4>
                                    <p class="text-muted mb-4">
                                        Mail adresinize gelen doğrulama kodunu giriniz.
                                    </p>

                                    <form asp-action="EmailConfirm" method="post">

                                        <div class="form-group mb-3">
                                            <label>Mail Adresi</label>
                                            <input type="email"
                                                   name="Email"
                                                   class="form-control"
                                                   placeholder="mail@example.com"
                                                   required />
                                        </div>

                                        <div class="form-group mb-4">
                                            <label>Doğrulama Kodu</label>
                                            <input type="text"
                                                   name="ConfirmCode"
                                                   class="form-control"
                                                   placeholder="6 haneli kod"
                                                   required />
                                        </div>

                                        <button type="submit" class="btn btn-primary w-100 mb-2">
                                            E-Mail Doğrula
                                        </button>

                                        <a href="/Login/UserLogin/" class="btn btn-light w-100">
                                            <i class="bx bx-arrow-back mr-1"></i> Giriş Sayfasına Dön
                                        </a>

                                    </form>
                                </div>
                            </div>

                            <!-- SAĞ TARAF -->
                            <div class="col-lg-7 d-none d-lg-block">
                                <img src="~/vertical-20260127T171413Z-3-001/vertical/assets/images/login-images/forgot-password-frent-img.jpg"
                                     class="img-fluid h-100 w-100 object-fit-cover" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
